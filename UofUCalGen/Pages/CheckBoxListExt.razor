@page "/CheckBoxListExt"
@using UofUCalGen.Properties
@inherits CheckBoxListExtBase
    <div class="col-12">  
        <h3><b>Please select events you wish to add to your calendar below: </b></h3>  
        <hr />  
        <div class="col-12 row">  
            <label class="col-2 font-weight-bold">CheckBox List :</label>  
            <EventCheckList Data="@EventList"  
                          TextField="@((item)=>item)"  
                          ValueField="@((item)=>item)"  
                          SelectedValues="@SelectedIds" />  
        </div>  
        <div class="col-12 row">  
            <label class="col-2 font-weight-bold">Selected Ids :</label>  
            <b>@SelectedEvents</b>  
        </div>  
        <br />  
        <div class="col-12 row">  
            <span class="col-2"></span>  
            <button class="form-control col-1 btn btn-primary" @onclick="ShowSelectedValues">Show Checked Values</button>  
        </div>  
    </div> 
